<h1>Listing hosts</h1>

<table>
  <thead>
    <tr>
      <th>Hostname</th>
      <th>Alias</th>
      <th>Display name</th>
      <th>Address</th>
      <th>Parents</th>
      <th>Hostgroups</th>
      <th>Check command</th>
      <th>Check period</th>
      <th>Notification interval</th>
      <th>Notification period</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hosts.each do |host| %>
      <tr>
        <td><%= host.hostname %></td>
        <td><%= host.alias %></td>
        <td><%= host.display_name %></td>
        <td><%= host.address %></td>
        <td><%= host.parents %></td>
        <td><%= host.hostgroups %></td>
        <td><%= host.check_command %></td>
        <td><%= host.check_period %></td>
        <td><%= host.notification_interval %></td>
        <td><%= host.notification_period %></td>
        <td><%= link_to 'Show', host %></td>
        <td><%= link_to 'Edit', edit_host_path(host) %></td>
        <td><%= link_to 'Destroy', host, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

